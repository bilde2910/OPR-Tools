{
  "name": "opr-tools",
  "userscriptName": "OPR Tools",
  "version": "0.0.0-dev",
  "description": "Unofficial addons that add extra quality of life features to Niantic Spatial's project OPR.",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"nodemon --exec npm run --silent build-watch\" \"npm run --silent serve\"",
    "serve": "npm run node-ts -- ./src/tools/serve.ts",
    "lint": "tsc --noEmit && eslint .",
    "build": "rollup -c",
    "build-watch": "rollup -c --config-mode development --config-host dev --config-branch main --config-assetSource=local",
    "build-develop": "rollup -c --config-mode development --config-host dev --config-branch main",
    "build-prod": "npm run build-prod-varden",
    "build-prod-base": "rollup -c --config-mode production --config-branch main",
    "build-prod-gh": "npm run build-prod-base -- --config-host github",
    "build-prod-varden": "npm run build-prod-base -- --config-host varden",
    "post-build": "npm run node-ts -- ./src/tools/post-build.ts",
    "node-ts": "node --no-warnings=ExperimentalWarning --enable-source-maps --loader ts-node/esm",
    "invisible": "node --enable-source-maps src/tools/run-invisible.mjs",
    "test": "npm run node-ts -- ./test.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bilde2910/OPR-Tools.git"
  },
  "author": {
    "name": "bilde2910",
    "url": "https://github.com/bilde2910"
  },
  "license": "GPL-3.0-only",
  "bugs": {
    "url": "https://github.com/bilde2910/OPR-Tools/issues"
  },
  "homepage": "https://github.com/bilde2910/OPR-Tools#readme",
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.39.1",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-replace": "^6.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.3.0",
    "@rollup/plugin-url": "^8.0.2",
    "@stylistic/eslint-plugin": "^5.6.0",
    "@types/express": "^5.0.5",
    "@types/google.maps": "^3.58.1",
    "@types/greasemonkey": "^4.0.7",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "concurrently": "^9.2.1",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.1",
    "express": "^5.1.0",
    "globals": "^16.5.0",
    "nodemon": "^3.1.11",
    "rollup": "^4.53.2",
    "rollup-plugin-execute": "^1.1.1",
    "rollup-plugin-scss": "^4.0.1",
    "sass": "^1.94.1",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@googlemaps/markerclusterer": "^2.6.2",
    "ag-grid-community": "^34.3.1",
    "proj4": "^2.20.0"
  },
  "nodemonConfig": {
    "watch": [
      "src/**",
      "assets/**",
      "rollup.config.mjs",
      ".env",
      "**/*.md",
      "package.json"
    ],
    "ext": "ts,mts,js,jsx,mjs,json,html,css,scss,svg,png",
    "ignore": [
      "dist/*",
      "dev/*"
    ]
  }
}
